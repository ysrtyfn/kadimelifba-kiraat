<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Theme. -->
    <style name="Theme.KıraatKarsilama" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/gun_vaziyet_cubugu</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/alameti_tatbikat_hilal_gun</item>
        <item name="windowSplashScreenAnimationDuration">700</item>
        <item name="postSplashScreenTheme">@style/Theme.Kıraat</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" >@color/gun_vaziyet_cubugu</item>
        <item name="android:navigationBarColor">@color/gun_vaziyet_cubugu</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
</resources>